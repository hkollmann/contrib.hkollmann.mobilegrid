{
	"$schema": "https://raw.githubusercontent.com/qooxdoo/qooxdoo-compiler/master/resource/schema/v1/compile.json",
	"environment": {
		"qx.icontheme": "Tango",
		"excludeFromAPIViewer": [
			"qx.*",
			"qxl.*"
		]
	},
	"applications": [
		{
			"class": "hkollmann.mobilegrid.demo.Application",
			"name": "mobilegrid.demo",
			"title": "MobileGrid Demo",
			"default": true
		},
		{
			"class": "qxl.apiviewer.Application",
			"theme": "qxl.apiviewer.Theme",
			"name": "apiviewer",
			"title": "Qooxdoo API Viewer",
			"environment": {
				"qx.icontheme": "Tango",
				"excludeFromAPIViewer": [
					"qxl.apiviewer.*"
				]
			},
			"include": [
				"qx.*"
			],
			"exclude": [
				"qx.test.*",
				"qx.module.Blocker",
				"qx.module.Placement"
			]
		}
	],
	"targets": [
		{
			"type": "source",
			"outputPath": "compiled/source"
		},
		{
			"type": "build",
			"outputPath": "compiled/build"
		}
	],
	"defaultTarget": "source",
	"locales": [
		"en"
	],
	"eslintConfig": {
		"parserOptions": {
			"ecmaVersion": 2017
		},
		"rules": {}
	},
	"sass": {
	   "compiler": "legacy"
	}
}